<Window x:Class="Controle_Caixa_Agua.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Controle_Caixa_Agua"
        mc:Ignorable="d"
        Title="Caixa d'água" Height="332" Width="424">
    <Grid RenderTransformOrigin="0.329,0.346">
        <Label Content="Preencha os Dados dos Sensores" HorizontalAlignment="Left" Height="26" Margin="36,22,0,0" VerticalAlignment="Top" Width="188"/>
        <StackPanel HorizontalAlignment="Left" Height="66" Margin="48,54,0,0" VerticalAlignment="Top" Width="82">
            <CheckBox x:Name="s1" Click="result" IsChecked="True" >Sensor 1</CheckBox>
            <CheckBox x:Name="s2" Click="result" IsChecked="True">Sensor 2</CheckBox>
            <CheckBox x:Name="s3" Click="result" IsChecked="True">Sensor 3</CheckBox>
            <CheckBox x:Name="s4" Click="result" IsChecked="True">Sensor 4</CheckBox>
        </StackPanel>
        <Label Content="Resultado" HorizontalAlignment="Left" Margin="36,158,0,0" VerticalAlignment="Top"/>
        <Label x:Name="output" Content="Válvula Fechada&#xA;&#xA;Bomba Desligada" HorizontalAlignment="Center" Margin="0,190,0,0" VerticalAlignment="Top" Height="62" Width="104"/>


    </Grid>
</Window>
